{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": false,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "types": ["element-plus/global"]
    },
    "include": [
        "resources/js/**/*.ts", 
        "resources/js/**/*.js", 
        "resources/js/**/*.d.ts", 
        "resources/js/**/*.vue", 
        "resources/js/Stores/customerStore.js", 
        "resources/js/Stores/requirementStore.js", 
        "resources/js/Stores/vehicleStore.js",
        "resources/js/Stores/addressStore.js", 
        "resources/js/app.js"
    ]
}
